<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:background="@android:color/transparent"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_menuItem"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitStart"
            />
        <TextView
            android:id="@+id/textView_menuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_menuItem"
            android:layout_marginTop="10dp"
            android:text="Menu Name"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            />


            <TextView
                android:id="@+id/textView_menuPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView_menuItem"
                android:layout_below="@id/textView_menuName"
                android:layout_marginTop="7dp"
                android:text="Menu Price"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/textView_menuDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView_menuItem"
                android:layout_below="@id/textView_menuPrice"
                android:layout_marginTop="7dp"
                android:text="Menu Desctiption"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:lines="3"

                />

            <View
                android:id="@+id/view_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textView_menuDescription"
                android:background="@drawable/mainbackground"
                android:layout_toRightOf="@+id/imageView_menuItem"/>

            <Button
                android:id="@+id/updateItemButton"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|right"
                android:layout_below="@id/view_1"
                android:layout_marginRight="20dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:text="Update"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background_login"
                android:layout_alignParentRight="true"
                />

            <Button
                android:id="@+id/deleteItem"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom|right"
                android:layout_below="@id/view_1"
                android:layout_marginRight="90dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="10dp"
                android:text="Remove"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@drawable/button_background_login"
                android:layout_alignParentRight="true"
                />



        </RelativeLayout>



    </androidx.cardview.widget.CardView>



</RelativeLayout>